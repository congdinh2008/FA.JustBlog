<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/App_Themes/fantom/css/bootstrap.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/vendors/lightbox/simpleLightbox.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/vendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/vendors/animate-css/animate.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/vendors/jquery-ui/jquery-ui.css">
    <!-- main css -->
    <link rel="stylesheet" href="~/App_Themes/fantom/css/style.css">
    <link rel="stylesheet" href="~/App_Themes/fantom/css/responsive.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
            <img src="~/Assets/images/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            Bootstrap
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "" })">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About", "Home", new { area = "" })">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Contact", "Home", new { area = "" })">Contact</a>
                </li>
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Identity Dashboard
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "UsersAdmin", new { area = "Identity" })">Users Admin</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "RolesAdmin", new { area = "Identity" })">Roles Admin</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Manager</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin Dashboard
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","CategoryManagement", new { area = "admin"})">Category Management</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "PostManagement", new { area = "admin"})">Post Management</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "TagManagement", new { area = "admin"})">Tag Management</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Dashboard</a>
                        </div>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container">
        @RenderBody()
        @Html.Partial("_Footer")
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/fontawesome.min.js" integrity="sha512-KCwrxBJebca0PPOaHELfqGtqkUlFUCuqCnmtydvBSTnJrBirJ55hRG5xcP4R9Rdx9Fz9IF3Yw6Rx40uhuAHR8Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @RenderSection("scripts", required: false)
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/App_Themes/fantom/js/popper.js"></script>
    <script src="~/App_Themes/fantom/js/stellar.js"></script>
    <script src="~/App_Themes/fantom/vendors/lightbox/simpleLightbox.min.js"></script>
    <script src="~/App_Themes/fantom/vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/App_Themes/fantom/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="~/App_Themes/fantom/vendors/isotope/isotope-min.js"></script>
    <script src="~/App_Themes/fantom/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/App_Themes/fantom/vendors/jquery-ui/jquery-ui.js"></script>
    <script src="~/App_Themes/fantom/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/App_Themes/fantom/js/mail-script.js"></script>
    <script src="~/App_Themes/fantom/js/theme.js"></script>
</body>
</html>
