@model IEnumerable<CategoryRightMenuViewModel>
<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">Post Catgories</h4>
    <ul class="list cat-list">
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("Details", "Categories", new { id = item.Id})" class="d-flex justify-content-between">
                    <p>@item.Name</p>
                    <p>@item.PostCount</p>
                </a>
            </li>
        }
    </ul>
    <div class="br"></div>
</aside>

